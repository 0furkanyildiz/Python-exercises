if __name__ == '__main__':
    n = int(input().strip())
    
    str1 = ""
    
    def find(n):
        global str1
        a = n % 2
        b = n // 2 
        str1 += str(a)
        if b > 1: find(b)
        else: str1 += str(b)
        return str1
        
    binary = find(n)
    l1 = binary.split("0")
    def mykey(n):
        return len(n)
    
    l1.sort(key=mykey)
    
    print(len(l1[-1]))
